<!-- for writing the codes for the header section -->
<!-- this file will be required by layout.ejs file -->

<header id="layout-header">
    <nav>
        <div class="mini-logo">
            <p>
                <a href='/'>
                    codeial
                </a>
            </p>
        </div>
    
        <div class="auth-links">
            <ul>
                <!-- if user is signed in -->
                <% if (locals.user){ %>
                <li>
                    <a href="/users/profile"><%= user.name %></a>
                </li>
                <li>
                    <a href="/users/sign-out">Sign Out</a>
                </li>
                <% }else{ %>
                    <!-- if user is not signed in -->
                    <li>
                        <a href="/users/sign-in">Sign In</a>
                    </li>
                    <li>
                        <a href="/users/sign-in">Sign Up</a>
                    </li>
        
                <% } %>
            </ul>
        </div>
    </nav>
 


</header>